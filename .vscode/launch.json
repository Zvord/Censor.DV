    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/CensorSln/src/Censor/bin/Debug/net6.0/Censor",
            "args": ["-i", "jsons/stub_example.json", "-o", "stub_coverage.sv"],
            "cwd": "${workspaceFolder}/",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "scenario_generator.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["-i", "stub_example.json", "-o", "example.sv"]
        }
    ]
}